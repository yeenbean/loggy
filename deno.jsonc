{
    "tasks": {
        "dev": "deno run --watch src/main.ts",
        "check": "deno check src/*",
        "lint": "deno lint src/*",
        "fmt": "deno fmt src/*"
    },
    "fmt": {
        "useTabs": false,
        "lineWidth": 80,
        "indentWidth": 4,
        "semiColons": true,
        "singleQuote": false,
        "proseWrap": "preserve",
        "include": ["src/"]
    }
}
